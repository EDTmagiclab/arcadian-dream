{
  "schemaVersion": 1,
  "id": "arcadiandream",
  "version": "${version}",

  "name": "Arcadian Dream",
  "description": "A Touhou mod for modern versions.",
  "authors": [
    "Maxmani"
  ],
  "contributors": [
    "Virtlux",
    "Foxigami"
  ],
  "contact": {
    "issues": "https://github.com/Maxmani/arcadian-dream/issues",
    "sources": "https://github.com/Maxmani/arcadian-dream"
  },

  "license": [
    "EUPL-1.2",
    "CC-BY-SA-4.0"
  ],
  "icon": "assets/arcadiandream/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.reimaden.arcadiandream.ArcadianDream"
    ],
    "client": [
      "net.reimaden.arcadiandream.ArcadianDreamClient"
    ],
    "preLaunch": [
      "net.reimaden.arcadiandream.ArcadianDreamPreLaunch"
    ],
    "fabric-datagen": [
      "net.reimaden.arcadiandream.ArcadianDreamDataGen"
    ],
    "rei_client": [
      "net.reimaden.arcadiandream.compat.rei.REIPlugin"
    ],
    "emi": [
      "net.reimaden.arcadiandream.compat.emi.EMIPlugin"
    ],
    "jei_mod_plugin": [
      "net.reimaden.arcadiandream.compat.jei.JEIPlugin"
    ]
  },
  "mixins": [
    "arcadiandream.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": "1.19.3",
    "java": ">=17",
    "trinkets" : ">=3.5.0",
    "owo": ">=0.9.3",
    "pehkui": ">=3.6.3",
    "geckolib": ">=4.0.3"
  },

  "custom": {
    "loom:injected_interfaces": {
      "net/minecraft/class_1282": ["net/reimaden/arcadiandream/util/IDamageSource"]
    }
  }
